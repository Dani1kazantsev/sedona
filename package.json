{
  "name": "sedona",
  "version": "1.0.0",
  "description": "Sedona project",
  "main": "gulpfile.js",
  "scripts": {
    "dev": "gulp dev",
    "build": "npm run lint && gulp build",
    "lint": "stylelint src/scss/**/*.scss --fix && eslint src/js/**/*.js --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "dev/scss/**/*.scss": [
      "stylelint --fix",
      "git add"
    ],
    "dev/js/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "Danil Kazantsev",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.14",
    "css-mqpacker": "^7.0.0",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-csso": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "gulp-svgmin": "^2.2.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-tinypng-compress": "^1.2.5",
    "gulp-uglify-es": "^2.0.0",
    "gulp-webp": "^4.0.1",
    "husky": "^4.3.8",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.19.0"
  }
}
